/*
 * Load preset based on its id
 * @param preset_id
 *   an listmixer preset array.
 * @return
 */
function listmixer_ui_preset($preset_id, $reset = FALSE) {
  $presets = listmixer_presets($reset);
  return (isset($presets[$preset_id])) ? $presets[$preset_id] : array();
}

